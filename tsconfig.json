// https://www.totaltypescript.com/tsconfig-cheat-sheet
// https://tsconfig.guide
{
  "compilerOptions": {
    // Base Options: recommended for all projects
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2024",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Strictness: enable strict type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Transpile to JavaScript
    "module": "NodeNext",
    "outDir": "dist/esm",
    "sourceMap": true,

    // Emit type declarations (if you're building for a library)
    "declaration": true,

    // Include the DOM types (if your code runs in the DOM)
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ]
  },

  // Include the necessary files for your project
  "include": ["src"]
}
