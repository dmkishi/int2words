{
  "name": "int2words",
  "version": "2.0.0",
  "description": "Convert integers to words.",
  "license": "MIT",
  "author": "DM Kishi <dm.kishi@gmail.com>",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:clean && npm run build:esm && npm run build:legacy",
    "build:clean": "rm -rf ./dist/*",
    "build:esm": "tsc",
    "build:legacy": "rollup -c",
    "lint": "npm run lint:script && npm run lint:markdown",
    "lint:script": "eslint .",
    "lint:markdown": "markdownlint-cli2",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "benchmark": "vitest bench --run",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.21.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^22.13.5",
    "@vitest/coverage-v8": "^3.0.6",
    "core-js": "^3.40.0",
    "eslint": "^9.21.0",
    "git-conventional-commits": "^2.8.0",
    "markdownlint-cli2": "^0.17.2",
    "rollup": "^4.34.8",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  },
  "repository": "github:dmkishi/int2words",
  "keywords": [
    "number",
    "translate",
    "English",
    "Japanese"
  ],
  "exports": {
    "types": "./dist/esm/index.d.ts",
    "import": "./dist/esm/index.js",
    "legacy-iife": "./dist/legacy-iife/int2words.min.js"
  },
  "unpkg": "dist/legacy-iife/int2words.min.js",
  "files": [
    "dist"
  ]
}
